<form action="/<%= @pokemon[:id] %>" method="post">
<!-- equal sign in the iec cream come means you wanna show what youve grabbed otherwise youre just runnong a function  -->
  <div class="">
    <label>Pokemon Name</label>
    <input type="text" name="title" value="<%= @pokemon[:title] %>" placeholder="Pokemon Name">
  </div>

  <div class="">
    <label>Pokedex Entry</label>
    <input type="text" name="body" value="<%= @pokemon[:body] %>" placeholder="Pokedex Entry">
  </div>

  <div class="">
    <input type="submit" name="" value="Add to Party">
  </div>

  <% if(@pokemon[:id] != "") %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
